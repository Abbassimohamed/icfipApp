@model ICFIP.Entites.Cour

@{
    ViewBag.Title = "ajoutercour";
}


<div class="col-md-6 col-md-offset-3">
    <div class="panel-group">
        <div class="panel panel-primary">

            <div class="panel-heading">

                <h2>ajouter cour</h2>
            </div>

            <div class="panel-body">
                <div class="col-md-6 col-md-offset-3">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="editor-label">
                            @*@Html.LabelFor(model => model.IdCour)*@
                        </div>
                        <div class="editor-field">
                            @Html.HiddenFor(model => model.IdCour)
                            @Html.ValidationMessageFor(model => model.IdCour)
                        </div>

                        <div class="editor-label">
                            <b>  @Html.DisplayName("Nom du Cour")</b>
                        </div>
                        <div class="editor-field">

                            @Html.EditorFor(model => model.Libelle)

                            @Html.ValidationMessageFor(model => model.Libelle)
                        </div>

                        <p>
                            <input class="btn btn-primary" type="submit" value="Ajouter" />
                        </p>

                        <p class="btn btn-primary">
                            @Html.ActionLink("Retourner", "Gerecour")
                        </p>



                    }
                </div>
                </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    a {
        color: white;
    }
</style>