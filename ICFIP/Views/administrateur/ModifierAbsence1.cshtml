@model ICFIP.Entites.Absenccess


@{
    ViewBag.Title = "ModifierNote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row ">
    <h2 class="text-primary col-md-4 col-md-offset-4">ModifierNote</h2>
    <div class="row ">
        <div class="col-md-10 col-md-offset-1">



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>



                    <table class="table table-bordered">
                        <tr class="btn-primary">
                            <td>Matiere </td>
                            <td>Absence </td>
                            <td>Date </td>




                        </tr>



                        @for (var i = 0; i < Model.ListePresence.Count; i++)
                        {
                            <tr class="info">


                                @Html.HiddenFor(m => Model.ListePresence[i].Idetudiant)
                                @Html.HiddenFor(m => Model.ListePresence[i].IdCour)
                                @Html.HiddenFor(m => Model.ListePresence[i].IdAbsence)

                                @Html.HiddenFor(m => Model.ListePresence[i].IdSemestre)
                                @Html.HiddenFor(m => Model.ListePresence[i].IdSpetialite)
                                @Html.HiddenFor(m => Model.ListePresence[i].IdNiveau)
                                @Html.HiddenFor(m => Model.ListePresence[i].IdFormation)
                                @Html.HiddenFor(m => Model.ListePresence[i].DateAbsnece)

                                <td>@ViewBag.IDCour[i] </td>
                                <td>@Html.CheckBoxFor(m => Model.ListePresence[i].BoolIsPresnece)</td>
                                <td>@Html.DisplayFor(m => Model.ListePresence[i].DateAbsnece)</td>
                                @Html.HiddenFor(m => Model.ListePresence[i].HeurAbsence)









                            </tr>
                        }
                    </table>











                    <p>
                        <input class="btn btn-primary" type="submit" value="Enregistrer" />
                    </p>
                    <div class="btn btn-primary">
                        @Html.ActionLink("Retourner", "Index")
                    </div>
                </fieldset>
            }

          

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
<style>
    a {
        color: white;
    }
</style>