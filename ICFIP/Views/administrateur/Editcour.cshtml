@model ICFIP.Entites.Cour

@{
    ViewBag.Title = "Editcour";
}



<div class="col-md-6 col-md-offset-3">
    <div class="panel-group">
        <div class="panel panel-primary">

            <div class="panel-heading">
                <h2>Modifier cour</h2>
            </div>

            <div class="panel-body">
                <div class="col-md-6 col-md-offset-3">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)




                        <div class="editor-label">
                            @*@Html.LabelFor(model => model.IdCour)*@
                        </div>
                        <div class="editor-field">
                            @Html.HiddenFor(model => model.IdCour)
                            @Html.ValidationMessageFor(model => model.IdCour)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Libelle)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Libelle)
                            @Html.ValidationMessageFor(model => model.Libelle)
                        </div>

                        <p>
                            <input type="submit" class="btn btn-primary" value="Enregistrer" />
                        </p>
                        <div class="btn btn-primary">
                            @Html.ActionLink("Retourner", "Gerecour")
                        </div>

                    }
                </div>
                </div>

        </div>
    </div>
</div>     
   

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
<style>
    a {
        color: white;
    }
</style>