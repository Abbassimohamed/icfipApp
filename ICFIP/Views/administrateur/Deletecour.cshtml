@model ICFIP.Entites.Cour

@{
    ViewBag.Title = "Deletecour";
}



<style>
    #footer {
        position: absolute;
        left: 0;
        bottom: 0;
        height: 100px;
        width: 100%;
        background-color: red;
    }

    .modal-body {
        max-height: calc(85vh - 210px);
        overflow-y: auto;
    }


</style>




<div class="col-md-6 col-md-offset-3">
    <div class="panel-group">
        <div class="panel panel-primary">

            <div class="panel-heading">
                <h2>Suuprmier  cour</h2>

                <h3>Vous voulez vraiment supprimer ça?</h3>

            </div>

            <div class="panel-body">


                <div class="col-md-7 col-md-offset-4 modal-body ">
                    <fieldset>
                      

                        <div class="display-label">
                            @*@Html.DisplayNameFor(model => model.IdCour)*@
                        </div>
                        <div class="display-field">
                            @Html.HiddenFor(model => model.IdCour)
                        </div>

                        <div class="display-label">
                            Nom du cour         :
                            @Html.DisplayFor(model => model.Libelle)
                        </div>
                    </fieldset>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <p>
                            <input type="submit" class="btn btn-primary" value="Supprimer" />
                            <h1 class="btn btn-primary">
                                @Html.ActionLink("Retourner", "Gerecour")
                            </h1>
                        </p>
                    }

                </div>

            </div>
        </div>
    </div>
</div>
<style>
    a {
        color: white;
    }
</style>