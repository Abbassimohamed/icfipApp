                @Html.EditorFor(model => model.nbrannee)
                @Html.ValidationMessageFor(model => model.nbrannee)
            </div>

            <div class="editor-label">
                @*@Html.LabelFor(model => model.IdNiveau)*@
            </div>
            <div class="editor-field">
                @Html.HiddenFor(model => model.IdNiveau)
