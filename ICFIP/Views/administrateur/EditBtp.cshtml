@model ICFIP.Entites.BTP

@{
    ViewBag.Title = "EditBtp";
}



<style>
    #footer {
        position: absolute;
        left: 0;
        bottom: 0;
        height: 100px;
        width: 100%;
        background-color: red;
    }

    .modal-body {
        max-height: calc(85vh - 210px);
        overflow-y: auto;
    }
</style>


<div style="margin-top:5%" class="row">
    <div style="margin-left:37%">
        <h2>Editer Btp</h2>
    </div>
</div>
<div class="col-md-7 col-md-offset-4 modal-body ">


