    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>BTP</legend>

            <div class="editor-label">
                @*@Html.LabelFor(model => model.IdBtp)*@
            </div>
            <div class="editor-field">
                @Html.HiddenFor(model => model.IdBtp)
                @Html.ValidationMessageFor(model => model.IdBtp)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Homolgue)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Homolgue)
