@model ICFIP.Entites.Salle

@{
    ViewBag.Title = "Editsalle";
}





<div class="col-md-6 col-md-offset-3">
    <div class="panel-group">
        <div class="panel panel-primary">

            <div class="panel-heading">
                <h2>Editer salle</h2>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)



                    <div class="editor-label">
                        @*@Html.LabelFor(model => model.IdSalle)*@
                    </div>
                    <div class="editor-field">
                        @Html.HiddenFor(model => model.IdSalle)
                        @Html.ValidationMessageFor(model => model.IdSalle)
                    </div>

                    <div class="editor-label">
                        @*@Html.LabelFor(model => model.IdAdministrateur)*@
                    </div>
                    <div class="editor-field">
                        @Html.HiddenFor(model => model.IdAdministrateur)
                        @Html.ValidationMessageFor(model => model.IdAdministrateur)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Libelle)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Libelle)
                        @Html.ValidationMessageFor(model => model.Libelle)
                    </div>

                    <p>
                        <input type="submit" class="btn btn-info" value="sauvgarder" />
                    </p>

                    <div>
                        @Html.ActionLink("retourner", "Index")
                    </div>

                }

            </div>

        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
