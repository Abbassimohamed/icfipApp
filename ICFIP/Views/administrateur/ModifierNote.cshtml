@model ICFIP.Entites.Notess

@{
    ViewBag.Title = "Modifier Note premier semetre ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row ">
    <h2 class="text-primary col-md-4 col-md-offset-4">ModifierNote</h2>
    <div class="row ">
        <div class="col-md-10 col-md-offset-1">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>



                    <table class="table table-bordered">
                        <tr class="btn-primary">
                            <td>Matiere </td>
                            <td>Note1</td>
                            <td>Note2 </td>
                            <td>Examen </td>



                        </tr>



                        @for (var i = 0; i < Model.ListeNote.Count; i++)
                        {
                            <tr class="info">

                                @Html.HiddenFor(m => Model.ListeNote[i].IdSpetialite)
                                @Html.HiddenFor(m => Model.ListeNote[i].Idetudiant)
                                @Html.HiddenFor(m => Model.ListeNote[i].IdCour)
                                @Html.HiddenFor(m => Model.ListeNote[i].IdNote)
                                @Html.HiddenFor(m => Model.ListeNote[i].DateNote)
                                @Html.HiddenFor(m => Model.ListeNote[i].HeurNote)
                                @Html.HiddenFor(m => Model.ListeNote[i].IdFormation)
                                @Html.HiddenFor(m => Model.ListeNote[i].IdNiveau)
                                @Html.HiddenFor(m => Model.ListeNote[i].IdSemestre)
                              
                                


                                <td>@ViewBag.IDCour[i] </td>
                                <td>@Html.EditorFor(m => Model.ListeNote[i].Note1)</td>
                                <td>@Html.EditorFor(m => Model.ListeNote[i].Note2)</td>
                                <td>@Html.EditorFor(m => Model.ListeNote[i].Note3)</td>








                            </tr>
                        }
                    </table>



