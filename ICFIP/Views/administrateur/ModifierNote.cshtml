                        <div class="editor-label">
                            @Html.LabelFor(model => model.Note1)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Note1)
                            @Html.ValidationMessageFor(model => model.Note1)
                        </div>




                        <div class="editor-label">
