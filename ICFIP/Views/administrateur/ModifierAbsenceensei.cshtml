@model ICFIP.Entites.Absencenseig


@{
    ViewBag.Title = "Modifier Absence  ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row ">
    <h2 class="text-primary col-md-4 col-md-offset-4">ModifierNote</h2>
    <div class="row ">
        <div class="col-md-10 col-md-offset-1">



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>


                    <table class="table table-bordered">
                        <tr class="btn-primary">
                 
                            <td>Absence </td>
                            <td>Date </td>
                      




                        </tr>



                        @for (var i = 0; i < Model.ListePresenceEnseig.Count; i++)
                        {
                            <tr class="info">


                                @Html.HiddenFor(m => Model.ListePresenceEnseig[i].Idenseignant)
                       
                                @Html.HiddenFor(m => Model.ListePresenceEnseig[i].IdPresence)

                          
                              

                                
                                <td>@Html.CheckBoxFor(m => Model.ListePresenceEnseig[i].BoolIsPresnece)</td>
                                <td>@Html.DisplayFor(m => Model.ListePresenceEnseig[i].DateAbsnece)</td>
                                @Html.HiddenFor(m => Model.ListePresenceEnseig[i].HeurAbsence)
                                @Html.HiddenFor(m => Model.ListePresenceEnseig[i].IdCour)
                             @Html.HiddenFor(m => Model.ListePresenceEnseig[i].DateAbsnece)









</tr>
                        }
                    </table>











                    <p>
                        <input class="btn btn-primary" type="submit" value="Enregistrer" />
                    </p>
                    <div class="btn btn-primary">
                        @Html.ActionLink("Retourner", "GetListEnseignant")
                    </div>
                </fieldset>
            }



            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
<style>
    a {
        color: white;
    }
</style>