@model ICFIP.Entites.Enseignant

@{
    ViewBag.Title = "editEnseignant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-6 col-md-offset-3">
    <div class="panel-group">
        <div class="panel panel-primary">

            <div class="panel-heading">

                <h2>Modifier Enseignant</h2>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel-group">
                                <div class="panel panel-primary">
                                    <div class="panel-heading"></div>
                                    <div class="row">
                                        <div class="col-md-6 col">
                                            <div class="col-md-6 col">



                                                <div class="editor-label">
                                                    @*@Html.LabelFor(model => model.MotdePasse)*@
                                                </div>
                                                <div class="editor-field">
                                                    @Html.HiddenFor(model => model.MotdePasse)
                                                    @Html.ValidationMessageFor(model => model.MotdePasse)
                                                </div>

                                                <div class="editor-label">
                                                    @*@Html.LabelFor(model => model.Idenseignant)*@
                                                </div>
                                                <div class="editor-field">
                                                    @Html.HiddenFor(model => model.Idenseignant)
                                                    @Html.ValidationMessageFor(model => model.Idenseignant)
                                                </div>

                                                <div class="editor-label">
                                                    @Html.LabelFor(model => model.Nom)
                                                </div>
                                                <div class="editor-field">
                                                    @Html.EditorFor(model => model.Nom)
                                                    @Html.ValidationMessageFor(model => model.Nom)
                                                </div>

                                                <div class="editor-label">
                                                    @Html.LabelFor(model => model.Prenom)
                                                </div>
                                                <div class="editor-field">
                                                    @Html.EditorFor(model => model.Prenom)
                                                    @Html.ValidationMessageFor(model => model.Prenom)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">

                                                <div class="editor-label">
                                                    @Html.LabelFor(model => model.Email)
                                                </div>
                                                <div class="editor-field">
                                                    @Html.EditorFor(model => model.Email)
                                                    @Html.ValidationMessageFor(model => model.Email)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="panel-group">
                                <div class="panel panel-primary">

                                    <div class="panel-heading"></div>
                                    <div class="panel-body">
                                        <div class="col-md-6">

                                            <div class="editor-label">
                                                @Html.LabelFor(model => model.DateNaissance)
                                            </div>
                                            <div class="editor-field">
                                                @Html.EditorFor(model => model.DateNaissance)
                                                @Html.ValidationMessageFor(model => model.DateNaissance)
                                            </div>

                                            <div class="editor-label">
                                                @*@Html.LabelFor(model => model.IdUser)*@
                                            </div>
                                            <div class="editor-field">
                                                @Html.HiddenFor(model => model.UserId)
                                                @Html.ValidationMessageFor(model => model.UserId)
                                            </div>

                                            <div class="editor-label">
                                                @Html.DisplayName("Cour")
                                            </div>
                                            <div class="editor-field">
                                                @Html.DropDownListFor(model => model.IdCour, null, "--Selectionnez Cour--")
                                                @Html.ValidationMessageFor(model => model.IdCour)
                                            </div>
                                        </div>
                                        <div class="col-md-6">

                                            <div class="editor-label">
                                                @Html.LabelFor(model => model.Tel)
                                            </div>
                                            <div class="editor-field">
                                                @Html.EditorFor(model => model.Tel)
                                                @Html.ValidationMessageFor(model => model.Tel)
                                            </div>

                                            <div class="editor-label">
                                                @Html.LabelFor(model => model.NCin)
                                            </div>
                                            <div class="editor-field">
                                                @Html.EditorFor(model => model.NCin)
                                                @Html.ValidationMessageFor(model => model.NCin)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <p>
                            <input type="submit" class="btn btn-primary" value="Enregistrer" />
                        </p>
                        <div class="btn btn-primary">
                            @Html.ActionLink("Retourner", "GetListEnseignant")
                        </div>

                    </div>

                }

            </div>
        </div>
    </div>





    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


    <style>
        a {
            color: white;
        }
    </style>
