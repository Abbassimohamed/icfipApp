@model IEnumerable<ICFIP.Entites.Salle>

@{
    ViewBag.Title = "GereSalle";
}



<div class="row">

    <h2 class="alert alert-info col-md-4 col-md-offset-4" role="alert" style="color:#31b0d5">Liste des salles</h2>

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="btn btn-info">

                @Html.ActionLink("retourner", "Index")
            </div>
            <div class="btn btn-info">
                @Html.ActionLink("Ajouter Salle", "ajoutersalle")
            </div>


            <table class="table">
                <tr class="btn-primary">
             


                    <th>
                        @Html.DisplayName("Nom du salle")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="info">

                        <td>
                            @Html.DisplayFor(modelItem => item.Libelle)
                        </td>
                        <td>
                            <div class="btn btn-info">
                                @Html.ActionLink("Modifier", "Editsalle", new { id = item.IdSalle })
                            </div> |
                            <div class="btn btn-info">
                                @Html.ActionLink("Details", "DetailSalle", new { id = item.IdSalle })
                            </div> |
                            <div class="btn btn-info">
                                @Html.ActionLink("Supprimer", "DeleteSalle", new { id = item.IdSalle })
                            </div>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>